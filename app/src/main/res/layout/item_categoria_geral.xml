<?xml version="1.0" encoding="utf-8"  ?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/tema_recycler_view"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewNomeCatGeral"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:layout_gravity="left"
        android:padding="3dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:text="Nome da Categoria" />
    <Button
        android:id="@+id/buttonEditarCatGeral"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_editar"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="Editar" />
    <Button
        android:id="@+id/buttonExcluirCatGeral"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_excluir"
        app:backgroundTint="@null"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="Excluir"/>

</LinearLayout>