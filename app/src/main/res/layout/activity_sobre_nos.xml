<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_rosinha"
    tools:context=".SobreNos">

    <LinearLayout
        android:id="@+id/card_principal"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:gravity="center"
        android:background="@drawable/borda_arredondada"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text="âœ¨ Raissa Maciel Lima"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/desc_sobre_nos"
            android:textSize="15sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/borda_redonda"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/card_principal"
        app:layout_constraintStart_toStartOf="@+id/card_principal"
        app:layout_constraintBottom_toTopOf="@+id/card_principal"
        app:layout_constraintTop_toTopOf="@+id/card_principal"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginBottom="-10dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_raissa"/>
    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pig_face"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="457dp" />

</androidx.constraintlayout.widget.ConstraintLayout>